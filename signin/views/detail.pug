extends layout

block content
    head
        meta(http-equiv="Content-Type",content="text/html; charset=utf-8")
        style(type='text/css').
            body{
            width: 100%;
            height: 100%;
            background:url(http://pic1.win4000.com/wallpaper/2017-12-05/5a2683fc9bc8f.jpg) no-repeat;
            background-size: 100%;
            color: whitesmoke;
            }
            h1{
            height:50px;
            width: 200px;
            text-align: center;
            margin: 0 auto;
            font: 30px 'Microsoft YaHei',arial,tahoma,\5b8b\4f53,sans-serif;
            }
            .user-container {
            padding:15px;
            width:270px;
            height:200px;
            border:1px solid #ffffff;
            border-radius: 6px;
            margin:0 auto;
            margin-top:30px;
            font-size:20px;
            }
            .space{
            height:30px;    
            }
            .button {
            width:142px;
            height:30px;
            font-weight: bold;
            color: #09161f;
            margin:0 auto;
            margin-top:50px;
            text-align:center;
            border:1px solid #ffffff;
            border-radius: 6px;
            color: aliceblue;
            }
            .button:hover{
            cursor: pointer;
            background-color: whitesmoke;
            color:black;
            }
            
        title 详情

    body
        div.space
        h1 用户详情
        div.user-container
            p 用户姓名: 
                span #{user.username}

            p 学号: 
                span #{user.sid}

            p 电话: 
                span #{user.phone}

            p 邮箱: 
                span #{user.email}                                    
            
            div.button
                div#signout 退出
    
    script(type='text/javascript', src='./javascripts/detail.js')